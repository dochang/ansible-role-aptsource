# https://wiki.debian.org/SourcesList

deb {{ aptsource_uri }} {{ aptsource_suite }} {{ aptsource_components | join(" ") }}
{% if aptsource_suite not in ('sid', 'unstable') %}
{% if aptsource_stable_updates_enabled | bool %}

# https://wiki.debian.org/StableUpdates
#
# {{ aptsource_suite }}-updates, previously known as 'volatile'
deb {{ aptsource_stable_updates_uri }} {{ aptsource_suite }}-updates {{ aptsource_components | join(" ") }}
{% endif %}
{% if aptsource_backports_enabled | bool %}

# http://backports.debian.org/
deb {{ aptsource_backports_uri }} {{ aptsource_suite }}-backports {{ aptsource_components | join(" ") }}
{% endif %}

# https://www.debian.org/security/
deb {{ aptsource_security_uri }} {{ aptsource_suite }}/updates {{ aptsource_components | join(" ") }}
{% endif %}
